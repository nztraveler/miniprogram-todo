<!-- pages/create/create.wxml -->
<view class="container">
  <form bindsubmit="onSubmit">
    <view class="form-item">
      <input placeholder="代办内容..." name="content"></input>
    </view>
    <view class="form-item">
      <input placeholder="添加标签..." name="label"></input>
    </view>
    <view class="form-item">
      <label>备注：</label>
      <textarea  class="textarea" auto-height="{{true}}" name="notes"></textarea>
    </view>
    <button type="primary" form-type="submit" >创建</button>
  </form>
</view>