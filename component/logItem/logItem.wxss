/* component/logItem/logItem.wxss */
.log-item{
  display:flex;
  padding-bottom: 10rpx;
  align-items: center;
  font-size: 28rpx;
  border-bottom: 1rpx solid #9B9B9B;
}

.log-item--action{
  margin-right: 10rpx;
  color: #7ED321;
}

.log-item--content{
  flex: 1 1 auto;
  color: #9B9B9B;
  overflow: hidden;
}

.log-item--clear{
  margin-left: 10rpx;
}